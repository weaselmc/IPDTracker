<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IPDTracker.Views.ItemDetailPage"
             xmlns:icon="clr-namespace:Plugin.Iconize;assembly=Plugin.Iconize"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <icon:IconToolbarItem Icon="fas-save" Text="Update" Clicked="Update_Clicked" />
        <icon:IconToolbarItem Icon="fas-trash" Text="Delete" Clicked="Delete_Clicked" />
        <icon:IconToolbarItem Icon="fas-times-circle" Text="Cancel" Clicked="Cancel_Clicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Text:" FontSize="Medium" />
            <Entry Text="{Binding Item.Text, Mode=TwoWay}" FontSize="Small"/>
            <Label Text="Description:" FontSize="Medium" />
            <Entry Text="{Binding Item.Description, Mode=TwoWay}" FontSize="Small"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>